# Docker build environment variables
# These are used during the Docker build process

# Basic Next.js configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
SKIP_ENV_VALIDATION=1

# Application configuration
PROJECT_ID=fechen-aifactory
LOCATION=us-central1
MODEL=veo-001
GEMINI_MODEL=gemini-2.5-flash

# Service configuration
USE_SIGNED_URL=true
USE_COSMO=false
GOOGLE_CLOUD_PROJECT=fechen-aifactory
GCLOUD_PROJECT=fechen-aifactory

# Runtime configuration
PORT=3000
HOSTNAME=0.0.0.0

# Build time placeholders (actual values set in Cloud Run)
YOUTUBE_API_KEY=placeholder
GCS_VIDEOS_STORAGE_URI=gs://placeholder/videos/